<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>MINI GFDFDOOGLE</title>
    <%- include ('partials/head') %>
  </head>
  <body>

    <!-- HEADER -->
    <%- include ('partials/navigation')%>

    <!-- MAIN CONTENT -->

    <div class="row">
    <div class="col-md-12 mx auto">
        <div class="card mt-4 text-center">
            <div class="card">
                <div class="card-header">
                    <h2>
                      Resultados de la palabra:
                    </h2>
                </div>
                <div class="card-body">
                  <form class="form-inline" method="POST">
                      <label for="word" class="mr-sm-2">Buscar:</label>
                      <input type="text" class="form-control mb-2 mr-sm-2" placeholder="Inserte busqueda" name="word" >
                  <!--
                      <label for="nodo2" class="mr-sm-2">Nodo2:</label>
                      <input type="text" class="form-control mb-2 mr-sm-2" placeholder="Nodo2" name="nodo2" value="{{nodo2}}">
                  -->
                      <button type="submit" class="btn btn-primary mb-2">Buscar</button>
                  </form>
                </div>

                <div class="container">
                  <!--<h2>Nodos</h2>-->
                  <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th>Link</th>
                        <th>Palabra</th>
                        <th>Peso</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (var i = 0; i < results.length;  i++) { %>
                        <tr>
                          <td><%= results[i].link %></td>
                          <td><%= results[i].keyword %></td>
                          <td><%= results[i].weight %></td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                  </div>

            </div>
        </div>
    </div>
</div>

    <!-- FOOTER -->
    <%- include ('partials/footer') %>

    <!-- JAVASCRIPT CDNS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

  </body>
</html>
